//Compute Viscosity from Ramp Function and Scale
@kernel void computeViscosity(const dlong Nelements,
                                   const dfloat alpha,
                                   @restrict const dfloat *viscRamp, 
                                   @restrict const dfloat *viscScale, 
                                   @restrict dfloat *visc){
 for(dlong e=0;e<Nelements;e++; @outer(0)){  // for all elements
    for(int n=0;n<p_Np;++n;@inner(0)){     // for all nodes in this element
      const dlong id     = e*p_Np*p_dNfields + n; 
      const dfloat scale = viscScale[e]; // (h/N) 
      
      for(int fld=0; fld<p_dNfields; fld++){
        const dfloat ramp = viscRamp[e*p_dNfields + fld];
        visc[id + fld*p_Np] = alpha*scale*ramp; // alpha* (h/N)* Activation Function 
      }

    }
  }
}